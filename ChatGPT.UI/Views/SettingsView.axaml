<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:ChatGPT.UI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="450"
             x:Class="ChatGPT.UI.Views.SettingsView"
             x:CompileBindings="True" x:DataType="vm:SettingsViewModel">
  <Design.DataContext>
    <vm:SettingsViewModel>
      <vm:SettingsViewModel.Temperature>0.6</vm:SettingsViewModel.Temperature>
      <vm:SettingsViewModel.MaxTokens>100</vm:SettingsViewModel.MaxTokens>
    </vm:SettingsViewModel>
  </Design.DataContext>
  <StackPanel Margin="16" 
              Orientation="Vertical" 
              VerticalAlignment="Top"
              Width="250">

    <StackPanel Orientation="Vertical">
      <StackPanel Orientation="Vertical">
        <TextBlock Text="Temperature:" 
                   Margin="4" 
                   Padding="0,4,0,4" 
                   FontSize="{DynamicResource SettingHeaderFontSize}" />
        <TextBox Text="{Binding Temperature}" 
                 Margin="4" 
                 Padding="8" 
                 FontSize="{DynamicResource SettingContentFontSize}"/>
      </StackPanel>
      <StackPanel Orientation="Vertical">
        <TextBlock Text="MaxTokens:" 
                   Margin="4" 
                   Padding="0,4,0,4" 
                   FontSize="{DynamicResource SettingHeaderFontSize}" />
        <TextBox Text="{Binding MaxTokens}" 
                 Margin="4" 
                 Padding="8" 
                 FontSize="{DynamicResource SettingContentFontSize}"/>
      </StackPanel>
      <StackPanel Orientation="Vertical">
        <TextBlock Text="ApiKey:" 
                   Margin="4" 
                   Padding="0,4,0,4" 
                   FontSize="{DynamicResource SettingHeaderFontSize}" />
        <TextBox Text="{Binding ApiKey}" 
                 Watermark="Override OpenAI api key"
                 PasswordChar="*"
                 Margin="4" 
                 Padding="8" 
                 FontSize="{DynamicResource SettingContentFontSize}" />
      </StackPanel>
    </StackPanel>

    <DockPanel HorizontalAlignment="Stretch"
               Margin="0,16,0,0"
               LastChildFill="False">
      <Button Command="{Binding ExitCommand}"
              Background="#00FFFFFF" 
              BorderBrush="#00000000"
              BorderThickness="1"
              CornerRadius="4"
              Margin="0,0,0,0" 
              Padding="8"
              DockPanel.Dock="Right">
        <PathIcon Data="{DynamicResource PowerIcon}"
                  Width="24" 
                  Height="24"
                  Foreground="{DynamicResource PowerIconBrush}"
                  Opacity="0.6"/>
      </Button>
      <Button Command="{Binding NewCommand}"
              Background="#00FFFFFF" 
              BorderBrush="#00000000"
              BorderThickness="1"
              CornerRadius="4"
              Margin="0,0,0,0" 
              Padding="8"
              DockPanel.Dock="Left">
        <PathIcon Data="{DynamicResource DocumentIcon}"
                  Width="24" 
                  Height="24"
                  Foreground="{DynamicResource ActionIconBrush}"/>
      </Button>
      <Button Command="{Binding OpenCommand}"
              Background="#00FFFFFF" 
              BorderBrush="#00000000"
              BorderThickness="1"
              CornerRadius="4"
              Margin="0,0,0,0" 
              Padding="8"
              DockPanel.Dock="Left">
        <PathIcon Data="{DynamicResource OpenIcon}"
                  Width="24" 
                  Height="24"
                  Foreground="{DynamicResource ActionIconBrush}"/>
      </Button>
      <Button Command="{Binding SaveCommand}"
              Background="#00FFFFFF" 
              BorderBrush="#00000000"
              BorderThickness="1"
              CornerRadius="4"
              Margin="0,0,0,0" 
              Padding="8"
              DockPanel.Dock="Left">
        <PathIcon Data="{DynamicResource SaveIcon}"
                  Width="24" 
                  Height="24"
                  Foreground="{DynamicResource ActionIconBrush}"/>
      </Button>
      <Button Command="{Binding ExportCommand}"
              Background="#00FFFFFF" 
              BorderBrush="#00000000"
              BorderThickness="1"
              CornerRadius="4"
              Margin="0,0,0,0" 
              Padding="8"
              DockPanel.Dock="Left">
        <PathIcon Data="{DynamicResource ArrowDownloadIcon}"
                  Width="24" 
                  Height="24"
                  Foreground="{DynamicResource ActionIconBrush}"/>
      </Button>
    </DockPanel>

  </StackPanel>
</UserControl>
