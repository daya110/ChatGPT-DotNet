<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:ChatGPT.ViewModels;assembly=ChatGPT"
             xmlns:vmc="clr-namespace:ChatGPT.ViewModels.Chat;assembly=ChatGPT"
             xmlns:chat="clr-namespace:ChatGPT.Views.Chat"
             xmlns:views="clr-namespace:ChatGPT.Views"
             xmlns:settings="clr-namespace:ChatGPT.Views.Settings"
             xmlns:history="clr-namespace:ChatGPT.Views.History"
             xmlns:objectModel="clr-namespace:System.Collections.ObjectModel;assembly=System.ObjectModel"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="700"
             x:Class="ChatGPT.Views.MainView"
             x:CompileBindings="True" x:DataType="vm:MainViewModel">
  <Design.DataContext>
    <vm:MainViewModel>
      <vm:MainViewModel.CurrentChat>
        <vmc:ChatViewModel>
          <vmc:ChatViewModel.Messages>
            <objectModel:ObservableCollection x:TypeArguments="vmc:ChatMessageViewModel">
              <vmc:ChatMessageViewModel IsSent="False" IsAwaiting="False" IsError="False" CanRemove="False">
                <vmc:ChatMessageViewModel.Prompt></vmc:ChatMessageViewModel.Prompt>
                <vmc:ChatMessageViewModel.Message>Hi! I'm Clippy, your Windows Assistant. Would you like to get some assistance?</vmc:ChatMessageViewModel.Message>
              </vmc:ChatMessageViewModel>
              <vmc:ChatMessageViewModel IsSent="True" IsAwaiting="False" IsError="False" CanRemove="False">
                <vmc:ChatMessageViewModel.Prompt></vmc:ChatMessageViewModel.Prompt>
                <vmc:ChatMessageViewModel.Message>Hi! I'm Clippy, your Windows Assistant. Would you like to get some assistance?</vmc:ChatMessageViewModel.Message>
              </vmc:ChatMessageViewModel>
              <vmc:ChatMessageViewModel IsSent="False" IsAwaiting="False" IsError="False" CanRemove="True">
                <vmc:ChatMessageViewModel.Prompt>This is prompt</vmc:ChatMessageViewModel.Prompt>
                <vmc:ChatMessageViewModel.Message>This is message</vmc:ChatMessageViewModel.Message>
                <vmc:ChatMessageViewModel.Result>
                  <vmc:ChatMessageViewModel />
                </vmc:ChatMessageViewModel.Result>
              </vmc:ChatMessageViewModel>
              <vmc:ChatMessageViewModel IsSent="True" IsAwaiting="False" IsError="False" CanRemove="True">
                <vmc:ChatMessageViewModel.Prompt>This is prompt</vmc:ChatMessageViewModel.Prompt>
                <vmc:ChatMessageViewModel.Message>This is message</vmc:ChatMessageViewModel.Message>
                <vmc:ChatMessageViewModel.Result>
                  <x:Null />
                </vmc:ChatMessageViewModel.Result>
              </vmc:ChatMessageViewModel>
              <vmc:ChatMessageViewModel IsSent="True" IsAwaiting="True" IsError="False" CanRemove="True">
                <vmc:ChatMessageViewModel.Prompt>This is prompt</vmc:ChatMessageViewModel.Prompt>
                <vmc:ChatMessageViewModel.Message>This is message</vmc:ChatMessageViewModel.Message>
                <vmc:ChatMessageViewModel.Result>
                  <x:Null />
                </vmc:ChatMessageViewModel.Result>
              </vmc:ChatMessageViewModel>
              <vmc:ChatMessageViewModel IsSent="True" IsAwaiting="False" IsError="False" CanRemove="True">
                <vmc:ChatMessageViewModel.Prompt>This is prompt</vmc:ChatMessageViewModel.Prompt>
                <vmc:ChatMessageViewModel.Message>This is message</vmc:ChatMessageViewModel.Message>
                <vmc:ChatMessageViewModel.Result>
                  <vmc:ChatMessageViewModel />
                </vmc:ChatMessageViewModel.Result>
              </vmc:ChatMessageViewModel>
              <vmc:ChatMessageViewModel IsSent="True" IsAwaiting="False" IsError="False" CanRemove="True">
                <vmc:ChatMessageViewModel.Prompt>This is prompt</vmc:ChatMessageViewModel.Prompt>
                <vmc:ChatMessageViewModel.Message>This is message</vmc:ChatMessageViewModel.Message>
                <vmc:ChatMessageViewModel.Result>
                  <x:Null />
                </vmc:ChatMessageViewModel.Result>
              </vmc:ChatMessageViewModel>
            </objectModel:ObservableCollection>
          </vmc:ChatViewModel.Messages>
        </vmc:ChatViewModel>
      </vm:MainViewModel.CurrentChat>
    </vm:MainViewModel>
  </Design.DataContext>
  <Grid Margin="12"
        RowDefinitions="*,Auto"
        ColumnDefinitions="*,Auto"
        ShowGridLines="False">
    <SplitView Grid.Row="0"
               Grid.Column="0"
               Grid.ColumnSpan="2"
               Name="ChatSplitView"
               PanePlacement="Left"
               OpenPaneLength="{Binding #ChatSplitView.Bounds.Width}"
               CompactPaneLength="0"
               IsPaneOpen="{Binding ShowMenu, Mode=TwoWay}"
               DisplayMode="CompactOverlay"
               UseLightDismissOverlayMode="True">
      <SplitView.Pane>
        <Panel>
          <settings:SettingsView IsVisible="{Binding ShowSettings}" />
          <history:HistoryView IsVisible="{Binding ShowChats}" />
        </Panel>
      </SplitView.Pane>
      <Panel IsVisible="{Binding !ShowMenu}">
        <ContentControl Content="{Binding CurrentChat}"
                        VerticalAlignment="Top">
          <ContentControl.ContentTemplate>
            <DataTemplate DataType="vmc:ChatViewModel">
              <chat:ChatView />
            </DataTemplate>
          </ContentControl.ContentTemplate>
        </ContentControl>
      </Panel>
    </SplitView>
    <views:MainViewActionsView Grid.Column="0"
                               Grid.Row="1" />
    <Image Grid.Column="1"
           Grid.Row="1"
           Name="ClippyImage"
           Height="100"
           Margin="-32,2,0,0"
           Source="/Assets/clipart855284.png"/>
  </Grid>
</UserControl>
